{
  "manifest_version": 3,
  "name": "Swipe for ClickUp",
  "version": "0.3.0",
  "description": "Sync your ClickUp inbox to Swipe for quick task triage.",
  "action": {
    "default_title": "Sync ClickUp Inbox to Swipe",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://app.clickup.com/*",
    "https://*.clickup.com/*",
    "http://localhost:*/*"
  ],
  "externally_connectable": {
    "matches": ["http://localhost:*/*"]
  }
}

